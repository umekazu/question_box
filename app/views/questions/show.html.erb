<h1><%= @question.text %></h1>
<% @posts.each do |post| %>
  <p>
    <%= post.body %>
    <%= link_to '削除', post_path(post), method: :delete %>
  </p>
<% end %>

<%= form_for(@newpost) do |f|%>
  <div><%= f.text_field :body, placeholder: "入力してください" %></div>
  <%= f.hidden_field :question_id %>
  <div><%= f.submit '新規投稿', class:'btn btn-primary' %></div>
<% end %>

<%= link_to '戻る', questions_path, class:'btn btn-outline-primary' %>