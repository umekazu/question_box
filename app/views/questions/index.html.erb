<h1>質問一覧<h1>
<table class="table">
  <thead>
    <tr>
      <th>質問</th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.text %></td>
        <td><%= link_to '詳細', question_path(question), class:"btn btn-info" %>
        <td><%= link_to '編集', edit_question_path(question), class:"btn btn-success" %>
        <td><%= link_to '削除', question_path(question), method: :delete, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '質問の追加', new_question_path, class:"btn btn-primary" %>